            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/white"
            fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
            fab:fab_icon="@drawable/refresh"
            fab:fab_size="normal"
            fab:fab_title="@string/fragment_rss_button_refresh"/>-->

        <cc.trity.floatingactionbutton.FloatingActionButton
            android:id="@+id/sort_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/white"
            fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
            fab:fab_icon="@drawable/up"
            fab:fab_size="mini"
            fab:fab_title="@string/fragment_rss_button_sort_up"/>

        <cc.trity.floatingactionbutton.FloatingActionButton
            android:id="@+id/sort_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/colorPrimary"
            fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
            fab:fab_size="mini"
            fab:fab_icon="@drawable/down"
            fab:fab_title="@string/fragment_rss_button_sort_down"/>

    </cc.trity.floatingactionbutton.FloatingActionsMenu>






